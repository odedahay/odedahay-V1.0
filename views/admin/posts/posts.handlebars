<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/admin/">Dashboard</a>
    </li>
    <li class="breadcrumb-item active">All Post</li>
</ol>

<h1 class="mb-4">All Post</h1>

 {{>home/form-msges}}

<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
    <thead>
        <tr>
        
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>View Post</th>
            <th>Date</th>
            <th></th>
            <th></th>
        
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td><img src="/uploads/{{file}}" alt="{{title}}" height="50" class="img-responsive" ></td>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>Category</td>
            <td>{{allowComments}}</td>
            <td>
                <a href="/post/{{id}}">View</a>
            </td>
            <td>{{generateDate date 'MMMM Do YYYY'}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td>
                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>

</table>

