<section class="resume-section p-3 p-lg-5 flex-column" id="labs">
    <div class="my-auto">
        <!-- <h2 class="mb-5">Blog</h2> -->
        <h1 class="mb-3">My
            <span class="text-primary">Labs</span>
        </h1>

        <div class="resume-item d-flex flex-column flex-md-row mb-5">

            <div class="resume-date text-md-left">
                <!-- Side Bar -->
                <span class="text-primary">Categories</span>

                <ul class="mt-3 ml-0">
                    {{#each categories}}
                    <li>
                        <a href="/my-labs/category/{{id}}">{{name}}</a>
                    </li>
                    {{/each }}
                </ul>

                <!-- social media -->
                {{>home/social-media }}


            </div>
            <div class="resume-content ">

                <h2 class="mb-3">{{post.title}}</h2>
                <hr>
                {{!-- <div class="subheading mb-3">Oliver Marketing PTE. LTD.</div> --}}
                <img src="/uploads/{{post.file}}" class="img-fluid mb-4 mt-3" style="float: left; padding-right:20px" />
                <p>{{{post.body}}}</p>
            </div>

        </div>

    </div>

</section>