<section class="resume-section p-3 p-lg-5 flex-column" id="labs">
    <div class="my-auto">
        <!-- <h2 class="mb-5">Blog</h2> -->
        <h1 class="mb-3">My
            <span class="text-primary">Labs</span>
        </h1>

        <div class="resume-item d-flex flex-column flex-md-row mb-5">

            <div class="resume-date text-md-left">
                <!-- Side Bar -->
                <span class="text-primary">Categories</span>

                <ul class="mt-3 ml-0">
                    {{#each categories}}
                        <li>
                            <a href="/my-labs/category/{{id}}">{{name}}</a>
                        </li>
                    {{/each }}
                </ul>

                <!-- social media -->
                {{>home/social-media }}
                

            </div>
            <div class="resume-content ">

                {{#each posts}}

                <div class="flex-direction mb-5 pb-5 border-bottom">

                    <div class="row">
                        <div class="col-md-4">
                            <a href="/my-labs/{{id}}">
                                <img src="/uploads/{{file}}" class="img-fluid" />
                            </a>
                        </div>
                        <div class="col-md-8">

                            <h2 class="mb-1">
                                <a href="/my-labs/{{id}}">{{title}} </a>
                            </h2>

                            {{!--
                            <div class="subheading mb-3">Oliver Marketing PTE. LTD.</div> --}}

                            <p class="story-text">{{stripTags (truncate body 150)}}</p>
                        </div>

                    </div>

                </div>
                {{/each}} 
                

            </div>

        </div>

    </div>

</section>